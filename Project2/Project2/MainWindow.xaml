<Window x:Class="Project2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project2"
        mc:Ignorable="d"
        Title="MainWindow"
        FocusManager.FocusedElement="{Binding ElementName=MyCanvas}"
        ResizeMode="NoResize" Height="600" Width="800">


    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/images/1391.png" Stretch="Fill" />
    </Window.Background>

    <Canvas Name="MyCanvas" KeyDown="Canvas_KeyDown" KeyUp="Canvas_KeyUp" Focusable="True" >
        <Rectangle Name="player" Width="36" Height="40" Margin="0" Canvas.Left="360" Canvas.Top="128">
            <Rectangle.Fill>
                <ImageBrush ImageSource="pack://application:,,,/images/pngfind.com-pokemon-trainer-red-png-4769662.png" />
            </Rectangle.Fill>

        </Rectangle>
        <Rectangle Name="gym" Width="184" Height="105" Margin="0" Canvas.Left="592" Canvas.Top="61"/>
        <Rectangle Name="manage" Width="183" Height="78" Margin="0" Canvas.Left="95" Canvas.Top="90"/>
        <Rectangle Name="MiniGame" Width="110" Height="88" Margin="0" Canvas.Left="360" Canvas.Top="472"/>

    </Canvas>
</Window>

