<Window x:Class="Project2.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="940">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/images/startBG.jpeg"></ImageBrush>
    </Window.Background>
    <Grid x:Name="myGrid" RenderTransformOrigin="0.483,0.55" Margin="0,0,0,-5">
        <Button x:Name="Fire" Content="Fire" HorizontalAlignment="Left" Height="36" Margin="94,370,0,0" VerticalAlignment="Top" Width="93" Click="Fire_Click"/>
        <Button x:Name="Grass" Content="Grass" HorizontalAlignment="Left" Height="36" Margin="713,370,0,0" VerticalAlignment="Top" Width="93" Click="Grass_Click"/>
        <Button x:Name="Water" Content="Water" HorizontalAlignment="Left" Height="36" Margin="412,370,0,0" VerticalAlignment="Top" Width="92" Click="Water_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="321,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" FontWeight="Bold" FontSize="20"><Run Language="zh-tw" Text="Choose your first Pokemon"/></TextBlock>
    </Grid>
</Window>
